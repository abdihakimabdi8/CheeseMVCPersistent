@model List<CheeseMVC.Models.CheeseCategory>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td><a asp-controller="Category"  asp-route-id="@category.ID">@category.Name</a></td>

           
        </tr>
    }
</table>

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
